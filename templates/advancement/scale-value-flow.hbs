<form id="{{appId}}" data-level="{{level}}" data-id="{{advancement.id}}" data-type="{{type}}">
  <h3>
    <span>{{{this.title}}}</span>
    {{#if advancement.configuration.item.uuid}}
      {{{dnd5e-linkForUuid advancement.configuration.item.uuid}}}
    {{/if}}
  </h3>

  <p>
    <span class="initial-scale-value {{#unless initial}}none{{/unless}}">
      {{#if initial}}{{{initial}}}{{else}}{{localize "DND5E.None"}}{{/if}}
    </span>
    &#x27A1;
    <span class="new-scale-value">{{{final}}}</span>
  </p>
</form>
